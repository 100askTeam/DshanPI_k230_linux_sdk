+	clock-names = "core", "bus";
+};
+&mmc_sd1{
+	status = "okay";
+	no-1-8-v;
+	cap-sd-highspeed;
+	mshc_ctrl_r = <0x00>;
+};
+&usb0 {
+	status = "okay";
+};
+&usb1 {
+	dr_mode = "host";
+	status = "okay";
+};
+
+
+&i2c4
+{
+	status = "okay";
+};
+
+
+
+&vo {
+	vth_line = <10>;
+};
+&mipi0
+{
+	// set to csi2
+	id = <2>;
